<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
		.panel {
			position: relative;
		}
		
		.interruptButton {
			position: absolute;
			right: 2%;
			top: 2%;
			font-size: 1em;
			font-weight: normal;
		}
		
		.textArea {
			border: none;
			background-color: black;
			color: white;
			font-family: monospace;
		}
	</ui:style>
	<g:HTMLPanel ui:field="panel" styleName="{style.panel}">
		<g:Button ui:field="interruptButton" text="Interrupt"
			styleName="{style.interruptButton}" />
		<g:TextArea ui:field="textArea" styleName="{style.textArea}"
			width="100%" height="100%"></g:TextArea>
	</g:HTMLPanel>
</ui:UiBinder>
